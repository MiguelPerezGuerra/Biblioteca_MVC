<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblioteca_MVC.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header id="menuHeader" class="row">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a id="menuTitulo" class="navbar-brand col-2" asp-area="" asp-controller="Home" asp-action="Index">Biblioteca <span id="puntoMenu">.</span> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="subMenu" class="col-10 navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacto">Contacto</a>
                        </li>                     
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!--Contenido pagina-->
    <div class="container-fluid">
        <div class="row">
            <!--inicio asider-->
            <div id="asideMenu" class="col-2">
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                Contenido
                            </button>
                        </h2>
                        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">

                            <a class="dropdown-item link-dark ps-5" asp-area="" asp-controller="Libros" asp-action="Index">Libros</a>
                            <a class="dropdown-item link-dark ps-5" asp-area="" asp-controller="Autores" asp-action="Index">Autores</a>
                            <a class="dropdown-item link-dark ps-5" asp-area="" asp-controller="Editoriales" asp-action="Index">Editoriales</a>
                            <a class="dropdown-item link-dark ps-5" asp-area="" asp-controller="Generos" asp-action="Index">Generos</a>

                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                                Usuarios
                            </button>
                        </h2>
                        <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">

                            <a class="link-dark dropdown-item ps-5" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                            <a class="dropdown-item link-dark ps-5" asp-area="" asp-controller="Personales" asp-action="Index">Personal</a>

                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingFour">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
                                Inventario
                            </button>
                        </h2>
                        <div id="flush-collapseFour" class="accordion-collapse collapse" aria-labelledby="flush-collapseFour" data-bs-parent="#accordionFlushExample">

                            <a class="link-dark dropdown-item ps-5" asp-area="" asp-controller="Prestamos" asp-action="Index">Prentamos</a>
                            <a class="link-dark dropdown-item ps-5" asp-area="" asp-controller="Reservas" asp-action="Index">Reservas</a>
                            <a class="dropdown-item link-dark ps-5" asp-area="" asp-controller="Devoluciones" asp-action="Index">Devoluciones</a>
                            <a class="dropdown-item link-dark ps-5" asp-area="" asp-controller="Ejemplares" asp-action="Index">Ejemplares</a>

                        </div>
                    </div>
                </div>              
            </div>
            <!--final asider-->

            <div id="Tablas" class="col-10 container">

                <main role="main" class="pb-3">
                    @RenderBody()
                </main>

            </div>

        </div>
    </div>

    <!--fin contenido pagina-->

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2023 - Miguel Pérez Guerra - <a class="link-dark text-decoration-none " asp-area="" asp-controller="Home" asp-action="Contacto">Contacto</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
