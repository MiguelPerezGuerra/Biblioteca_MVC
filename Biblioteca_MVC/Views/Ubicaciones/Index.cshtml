@model IEnumerable<Biblioteca_MVC.Models.Ubicacione>

@{
    ViewData["Title"] = "Index";
}

<div class="ContenedorFormulario">

    <h1 class="titulos">Lista de <b class="colorTitulo">Ubicaciones</b></h1>

    <form asp-controller="Ubicaciones" asp-action="Index">
        <div class="row">
            <div class="col-sm-8">
                <div class="search-box d-flex w-100">
                    <button type="submit" class="btn btnSearch">
                        <i class="bi bi-search"></i>
                    </button>
                    <input type="text" name="buscar" class="form-control text-opacity-75" placeholder="Buscar por Nombre de libro&hellip;" />
                </div>
            </div>
            <div class="col-sm-4">
                <p>
                    <a asp-action="Create" class="btn btn-outline-info">+ Agregar</a>
                </p>

            </div>
        </div>
    </form>

        <table class="table table-hover">
            <thead class="text-start">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Seccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estante)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Seccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estante)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
